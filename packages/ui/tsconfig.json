{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": false,
    "inlineSources": false,
//    "types": ["node"],

    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    /* Path */
    "paths": {
      "@src/*": ["src/*"],
      "@ui/*": ["src/ui/*"],
      "@ui": ["src/ui/index.ts"],
      "@util/*": ["src/utils/*"],
      "@util": ["src/utils/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", "dist", ".yarn"
  ]
}
