{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client"],

    /* Path */
    "paths": {
      "@src/*": ["src/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages/index.ts"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets/index.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
