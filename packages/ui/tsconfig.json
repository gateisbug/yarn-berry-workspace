{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": false,
//    "declaration": true,
    "declaration": false,
//    "declarationDir": "./dist/types",
    "sourceMap": false,
    "inlineSources": false,
    "outDir": "./dist",
    "types": ["node"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path */
    "paths": {
      "@src/*": ["./src/*"],
      "@ui/*": ["./src/ui/*"],
      "@ui": ["./src/ui/index.ts"],
      "@util/*": ["./src/utils/*"],
      "@util": ["./src/utils/index.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules", "dist", ".yarn"
  ]
}
