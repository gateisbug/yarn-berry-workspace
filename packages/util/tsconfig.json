{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": false,
    "inlineSources": false,
    "outDir": "./dist",
    "types": ["node", "jest"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules", "dist", ".yarn", "**/*.test.*", "**/*.spec.*"
  ]
}
